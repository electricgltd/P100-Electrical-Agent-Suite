{
  "name": "P100 Dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "8.0"
    }
  },
  "postCreateCommand": "python -m venv .venv && . .venv/bin/activate && if [ -f requirements.txt ]; then pip install -r requirements.txt; fi && dotnet tool install --global Microsoft.PowerApps.CLI.Tool || true",
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/root/.dotnet/tools"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.analysis.autoImportCompletions": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
}
